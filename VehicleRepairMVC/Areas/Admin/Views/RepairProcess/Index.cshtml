@model IEnumerable<Appointment>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Repair Process</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQERLDJ0VsRI18BMCLlD1fwCWq6LXD9sd9VjY6D3eFMCwfh5gS9k3q23U" crossorigin="anonymous">
    <style>
        .table-container {
            margin-top: 50px;
        }

        .table-title {
            margin-bottom: 30px;
        }

        .table th, .table td {
            padding: 0.5rem;
            vertical-align: middle;
        }

        .table th {
            width: auto;
        }

        .small-col {
            width: 5%;
        }

        .medium-col {
            width: 10%;
        }

        .large-col {
            width: 15%;
        }

        .btn-group {
            display: flex;
            gap: 10px;
        }
    </style>
</head>
<body>
    <div class="container table-container">
        <h2 class="table-title text-center">İşlem Yönetimi</h2>
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr class="text-center align-middle">
                    <th class="medium-col">Kullanıcı Adı</th>
                    <th class="medium-col">Araç Plakası</th>
                    <th class="medium-col">Randevu Zamanı</th>
                    <th class="large-col">Arıza</th>
                    <th class="large-col"></th> <!-- Ekleme ve Silme İşlemleri İçin -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center align-middle">
                        <td class="small-col">@item.Car?.User?.Username</td>
                        <td class="small-col">@item.Car?.LicensePlate</td>
                        <td class="medium-col">@item.AppointmentDate</td>
                        <td class="large-col">@item.Description</td>
                        <td class="large-col">
                            <div class="d-flex justify-content-center">
                                  <div class="btn-group">
                                    <a asp-action="AddRepairProcess" asp-route-id="@item.AppointmentID" class="btn btn-primary">
                                        <i class="fa-solid fa-screwdriver-wrench" style="color: #ffffff;"></i>
                                        Tamir İşlemi Ekle</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6U5BQniib9gPj8ETMZyD2yA11yd90xT9WZJpJmO07yUXvYjPeSO" crossorigin="anonymous"></script>
</body>
</html>